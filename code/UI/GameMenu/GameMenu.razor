@using System
@using Sandbox
@using Sandbox.Menu
@using Sandbox.UI

@namespace BoxBusters.UI.GameMenu
@attribute [StyleSheet]
@implements IGameMenuPanel
@inherits NavHostPanel

<root>
	<div class="background" />

		<div class="navigator-canvas" slot="navigator-canvas"/>
</root>

@code
{
	public GameMenu()
	{
		DefaultUrl = "/";
		
		BindClass( "ingame", () => Game.InGame );
	}
	
	[GameEvent.Menu.ServerJoined]
	public void OnServerJoined()
	{
		Navigate( "/" );
	}

	[GameEvent.Menu.ServerLeave]
	public void OnServerLeave()
	{
		Navigate( "/" );
	}
}
